@model SisCEV_Modelo.Cadastros.Fabricante

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "SisCEV - Deletar Fabricante";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Fabricante a ser removido
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)<br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Nome, new
                {
                    htmlAttributes = new { @class = "form-control", disabled = "disabled"
                } })
            </div>
        </div>
    </div>
    <div class="panel-footer panel-info">
        <a href="#" class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmationModal">Remover</a>
        @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn btn-warning"})

    </div>
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" datadismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">Confirmar Exclusão de Fabricante</h4>
            </div>
            <div class="modal-body">
                <p>
                    Você está prestes a remover o produto @Model.Nome.ToUpper() do cadastro.
                </p>
                <p>
                    <strong>
                        Deseja prosseguir?
                    </strong>
                </p>
                @using (Html.BeginForm("Delete", "Fabricantes", FormMethod.Post, new { @id = "delete-form", role = "form" }))
                {
                    @Html.HiddenFor(m => m.FabricanteId)
                    @Html.AntiForgeryToken()
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="$('#delete-form').submit();">
                    Sim
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Não
                </button>
            </div>
        </div>
    </div>
</div>

@section ScriptPage {
        <script type="text/javascript">
            $(document).ready(function () {
                $('li').removeClass("active");
                $('#liFabricantes').addClass("active");
            });
        </script>
    }