@model IEnumerable<SisCEV_Modelo.Tabelas.Categoria>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "SisCEV - Categoria";
}


@*@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}*@

<div class="panel panel-primary">

    <div class="panel-heading">Relação de Categorias</div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>Opções</th>                 
                    <!--<th></th>-->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            <a class="btn btn-warning" href="@Url.Action("Edit", new { id = item.CategoriaId})">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>                  
                            <a class="btn btn-info" href="@Url.Action("Details", new { id = item.CategoriaId})">
                                <i class="glyphicon glyphicon-info-sign"></i>
                            </a>
                            <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.CategoriaId})">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Nova Categoria", "Create", "null",
            new { @class = "btn btn-primary" })
    </div>
</div>

@section styles{<link href="@Url.Content("~/Content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />}
@section ScriptPage{
    <script src="@Url.Content("~/Scripts/DataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
            $(document).ready(function () {
                //$('.table').dataTable();
                $('.table').dataTable({
                    "order": [[0, "asc"]]
                });
            });
            $(document).ready(function () {
                $('li').removeClass("active");
                $('#liCategorias').addClass("active");
            });
    </script>
}
