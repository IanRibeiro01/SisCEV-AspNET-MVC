@model SisCEV_Modelo.Cadastros.Fabricante

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "SisCEV - Detalhes do Fabricante";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Detalhes do Fabricante
    </div>
    <div class="panel-body">

        @Html.Partial("~/Areas/Cadastros/Views/Fabricantes/_PartialDetailsContentPanel.cshtml", Model)

    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Alterar", "Edit", new { id = Model.FabricanteId }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn btn-warning" })
    </div>
</div>

@Html.Partial("~/Views/Produtos/_PorFabricante.cshtml", Model.Produtos.ToList())

@section styles{<link href="@Url.Content("~/Content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />}
@section ScriptPage{
    <script src="@Url.Content("~/Scripts/DataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.table').dataTable({
                "order": [[0, "asc"]]
            });
        });
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liFabricantes').addClass("active");
        });
    </script>
}